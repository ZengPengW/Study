<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<!-- 读取属性文件 -->
	<properties resource="jdbc.properties" />
	
	<!-- 配置别名   可针对一个类配置 也可以通过扫描包 自动配置 别名是不分大小写的类名-->
	<typeAliases>
		<!-- <typeAlias type="com.study.mybatis.entity.User" alias="User"/> -->
		<package name="com.study.mybatis.entity" />
	</typeAliases>
 


	<!-- 和spring整合后 environments配置将废除 -->
	<environments default="development">
		<environment id="development">
			<!-- 使用jdbc事务管理 -->
			<transactionManager type="JDBC" />
			<!-- 数据库连接池 -->
			<dataSource type="POOLED">
				<property name="driver" value="${jdbc.driverClass}" />
				<property name="url" value="${jdbc.url}" />
				<property name="username" value="${jdbc.username}" />
				<property name="password" value="${jdbc.password}" />
			</dataSource>
		</environment>
	</environments>

<!-- 引入map文件 
mapper
resource: 指定xml文件
class:指向接口类 ,此种方式要求mapper接口名称和mapper映射文件名称相同且放在同一目录
url:指定文件的绝对路径

package 
 name:指定包名,此种方式要求mapper接口名称和mapper映射文件名称相同且放在同一目录
-->
<mappers>
<mapper resource="com/study/mybatis/entity/User.xml"/>
<mapper resource="com/study/mybatis/entity/orders.xml"/>
</mappers>

</configuration>